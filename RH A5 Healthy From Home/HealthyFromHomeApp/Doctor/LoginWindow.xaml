<Window x:Class="HealthyFromHomeApp.Doctor.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Doctor Login" Height="200" Width="400" ResizeMode="NoResize">
    <Grid>
        <Label Content="Username:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
        <TextBox x:Name="usernameBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,20,0,0" Width="250"/>

        <Label Content="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,60,0,0"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,60,0,0" Width="250"/>

        <Button Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,110,0,0" Width="100" Click="LoginButton_Click"/>
    </Grid>
</Window>