<Window x:Class="HealthyFromHomeApp.Doctor.ClientChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat with Client" Height="400" Width="600" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="chatHistory" HorizontalAlignment="Left" Height="300" VerticalAlignment="Top" Width="580" Margin="10,10,0,0" IsReadOnly="True" TextWrapping="Wrap" />
        <TextBox x:Name="messageBox" HorizontalAlignment="Left" Height="50" VerticalAlignment="Bottom" Width="580" Margin="10,0,0,10" />
        <Button Content="Send" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Margin="0,0,10,10" Click="SendButton_Click"/>
    </Grid>
</Window>
