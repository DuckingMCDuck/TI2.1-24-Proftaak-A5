<Window x:Class="HealthyFromHomeApp.Clients.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="400">
    <Grid>
        <Label Content="Enter your name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
        <TextBox x:Name="TxtClientName" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,20,0,0" Width="200"/>
        <Button Content="Connect" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" Margin="0,20,0,0" Click="BtnConnect_Click"/>
    </Grid>
</Window>
