<Window x:Class="HealthyFromHomeApp.Clients.BikeSessionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bike Session" Height="450" Width="400" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="TxtBikeData" VerticalAlignment="Top" Margin="10,10,10,0" Height="326" IsReadOnly="True" />
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10">
            <Button x:Name="BtnStartSession" Content="Start Session" Height="30" Width="100" Margin="0,0,10,0" Click="BtnStartSession_Click"/>
            <Button x:Name="BtnStopSession" Content="Stop Session" Height="30" Width="100" Click="BtnStopSession_Click"/>
        </StackPanel>
        <TextBox x:Name="TxtHeartrateData" HorizontalAlignment="Left" Margin="10,341,0,0" TextWrapping="Wrap" Text="Heartrate:" VerticalAlignment="Top" Width="120"/>
        <Button Content="Connect" HorizontalAlignment="Left" Margin="135,340,0,0" VerticalAlignment="Top" Width="79" Click="HeartRateButton_Click"/>
    </Grid>
</Window>
